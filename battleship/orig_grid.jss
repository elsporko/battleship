.grid { margin:1em auto; border-collapse:collapse }
.grid td, div {
    cursor:pointer;
    width:30px; height:30px;
    border:1px solid #ccc;
    text-align:center;
    font-family:sans-serif;
    font-size:13px;
    box-sizing:border-box;
}
.grid td.clicked {
    background-color:yellow;
    font-weight:bold;
    color:red;
}

div.grid{
    float:left;
}

